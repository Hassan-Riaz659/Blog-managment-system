@page "{id:Guid}"
@model Blog_managment_system.Web.Pages.Admin.Blogs.EditModel
@{
}
<div class="bg-secondary bg-opacity-10 py-2 mb-5">

    <div class="container">
        <h1>Edit Blog post</h1>
    </div>

</div>

<partial name="_Notification"> 



@if (Model.BlogPost != null)
{
    <div>
        <div class="container">
            <form method="post">
                <div class="mb-3">
                    <label for="" class="form-label">ID</label>
                    <input type="text" asp-for="BlogPost.Id" readonly class="form-control" id="id">
                </div>

                <div class="mb-3">
                    <label for="" class="form-label">Heading</label>
                    <input type="text" asp-for="BlogPost.Heading" class="form-control" id="heading">
                </div>

                <div class="mb-3">
                    <label for="pagetitle" class="form-label">Page title</label>
                    <input type="text" asp-for="BlogPost.PageTitle" class="form-control" id="pagetitle">
                </div>

                <div class="mb-3">
                    <label for="content" class="form-label">Content</label>
                    <textarea class="form-control" id="content" asp-for="BlogPost.Content"></textarea>
                </div>

                <div class="mb-3">
                    <label for="shortDescription" class="form-label">Short Description</label>
                    <input type="text" class="form-control" asp-for="BlogPost.Shortdescription" id="shortDescription">
                </div>

                <div class="mb-3">
                    <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                    <input type="text" class="form-control" asp-for="BlogPost.FeaturedImageUrl" id="featuredImageUrl">
                </div>

                <div class="mb-3">
                    <label for="UrlHandle" class="form-label">Url Handle</label>
                    <input type="text" class="form-control" asp-for="BlogPost.UrlHandle" id="=UrlHandle">

                </div>

                <div class="mb-3">
                    <label for="publishedDate" class="form-label">Pusblished Date</label>
                    <input type="date" class="form-control" id="publishedDate" asp-for="BlogPost.PublishedDate">
                </div>

                <div class="mb-3">
                    <label for="author" class="form-label">Author</label>
                    <input type="text" class="form-control" id="author" asp-for="BlogPost.Author">
                </div>


                    <div class="mb-3">
                        <label for="" class="form-label">Tags (comma seperated)</label>
                        <input type="text" class="form-control" id="tags" asp-for="Tags" />
                    </div>

                <div class="form-check mb-3">
                    <input class="form-check-input" type="checkbox" id="isVisible" asp-for="BlogPost.Visible">
                    <label class="form-check-label" for="isVisible">
                        Is Visible
                    </label>
                </div>
                <div class="mb-3 d-flex justify-content-between">
                    <button class="btn btn-primary" type="submit" asp-page-handler="Edit">Submit</button>
                    <button class="btn btn-danger" type="submit" asp-page-handler="delete">Delete</button>
                </div>

            </form>
        </div>

    </div>

        }
else
{
    <div class="container">
        <p>Blog Post Not found</p>
    </div>    

}

@section Scripts {

    <script>

        var editor = new FroalaEditor('#content'); 
    </script>

}


