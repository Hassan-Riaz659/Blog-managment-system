@page
@model Blog_managment_system.Web.Pages.Admin.Blogs.AddModel
@{
}

<div class="bg-secondary bg-opacity-10 py-2 mb-5">

    <div class="container">
        <h1>Add Blog post</h1>
    </div>

</div>
<div>
    <div class="container">
        <form method="post">
            <div class="mb-3">
                <label for="" class="form-label">Heading</label>
                <input type="text" asp-for="AddBlogPostRequest.Heading" class="form-control" id="heading">
            </div>

            <div class="mb-3">
                <label for="pagetitle" class="form-label">Page title</label>
                <input type="text" asp-for="AddBlogPostRequest.PageTitle" class="form-control" id="pagetitle">
            </div>
           
            <div class="mb-3">
                <label for="content" class="form-label">Content</label>
                <textarea class="form-control" id="content" asp-for="AddBlogPostRequest.Content"></textarea>
            </div>

            <div class="mb-3">
                <label for="shortDescription" class="form-label">Short Description</label>
                <input type="text" class="form-control" asp-for="AddBlogPostRequest.Shortdescription" id="shortDescription">
            </div>
            
            <div class="mb-3">
                <label for="featuredImageUrl" class="form-label">Featured Image Url</label>
                <input type="text" class="form-control" asp-for="AddBlogPostRequest.FeaturedImageUrl" id="featuredImageUrl">
            </div>

            <div class="mb-3">
                <label for="UrlHandle" class="form-label">Url Handle</label>
                <input type="text" class="form-control" asp-for="AddBlogPostRequest.UrlHandle" id="=UrlHandle">
           
           </div>
            
            <div class="mb-3">
                <label for="publishedDate" class="form-label">Pusblished Date</label>
                <input type="date" class="form-control" id="publishedDate" asp-for="AddBlogPostRequest.PublishedDate">
            </div>

            <div class="mb-3">
                <label for="author" class="form-label">Author</label>
                <input type="text" class="form-control" id="author" asp-for="AddBlogPostRequest.Author">
            </div>


            <div class="mb-3">
                <label for="" class="form-label">Tags (comma seperated)</label>
                <input type="text" class="form-control" id="tags" asp-for="Tags" />
            </div>


            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="isVisible" asp-for="AddBlogPostRequest.Visible">
                <label class="form-check-label" for="isVisible" >
                    Is Visible
                </label>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>

        </form>
    </div>

</div>
@section Scripts
{
    <script>

        var editor =  new FroalaEditor('#content');

    </script>

}